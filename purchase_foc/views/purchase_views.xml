<odoo>
    <data>
        <record id="purchase_order_form_inherit_purchase_foc" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.purchase.foc</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook//page//field[@name='order_line']/tree/field[@name='name']" position="after">
                    <field name="is_foc"/>
                </xpath>
                <xpath expr="//notebook//page//field[@name='order_line']/tree/field[@name='price_unit']"
                       position="attributes">
                    <attribute name="attrs">{'readonly':[('is_foc', '=', True)]}</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>