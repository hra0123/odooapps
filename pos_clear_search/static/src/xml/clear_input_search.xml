<?xml version="1.0" encoding="UTF-8"?>
<templates id="pos_clear_search_template" inherit_id="point_of_sale.template" xml:space="preserve">

	 	<!-- ProductsWidgetControlPanel -->
    <t t-name="ProductsWidgetControlPanel" t-inherit="point_of_sale.ProductsWidgetControlPanel"
       t-inherit-mode="extension" owl="1">
			<xpath expr="//div[hasclass('search-box')]/span" position="replace">
                   <span class="icon"><i class="fa fa-search"></i></span>
                   <span t-on-click="clearSearch" class="clear-icon" id="clear_search_icon">
                         <i class="fa fa-times" aria-hidden="true"></i>
				   </span>
			</xpath>
		</t>
	</templates>


